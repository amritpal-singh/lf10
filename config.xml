<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.lften.app"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>LF10</name>

    <description>
        Static and Dynamic Procedure for Wind Loads.
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        TS TEAM
    </author>
    
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <icon src="res/android/icon-96-xhdpi.png" />

    <icon gap:platform="android" gap:qualifier="ldpi" src="res/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/android/icon-96-xhdpi.png" />
    
    <icon gap:platform="ios" height="57" src="res/ios/icon-57.png" width="57" />
    <icon gap:platform="ios" height="72" src="res/ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="res/ios/icon-114.png" width="114" />
    <icon gap:platform="ios" height="144" src="res/ios/icon-72-2x.png" width="144" />
    
    <gap:splash gap:platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    
    <access origin="*" />
    
</widget>